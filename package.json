{
  "name": "cf-turborepo-ne",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:generate": "pnpm --filter @repo/db generate",
    "migrate:local": "pnpm --filter api exec -- wrangler d1 migrations apply DB --local",
    "migrate:remote": "pnpm --filter api exec -- wrangler d1 migrations apply DB --remote",
    "db:studio": "pnpm --filter @repo/db studio",
    "ui:add": "cd packages/ui && pnpm dlx shadcn@latest add"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.7.5",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "author": "Diego Nelson (3 Lineas)",
  "version": "1.0.0"
}
